<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.romel.expensestracker.MainActivity">

    <EditText
        android:id="@+id/enter_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/enter_button"
        android:layout_alignBottom="@+id/enter_button"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/enter_button"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:text="@string/enter_amount"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/net_expense_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/net_expenses"
        android:textSize="20sp" />

    <Button
        android:id="@+id/expenses_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:text="@string/expense_button_text" />

    <Spinner
        android:id="@+id/expenses_spinner"
        android:layout_width="368dp"
        android:layout_height="21dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/enter_amount_text" />

    <Button
        android:id="@+id/enter_button"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/enter_button_text" />
</RelativeLayout>
